<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_detail"
            android:padding="16dp"
            android:text="Nome"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/text_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_detail_name"
            android:padding="16dp"
            android:text="Ut fringilla metus ac risus laoreet dapibus. Fusce in lectus est. Nullam convallis efficitur eros eget auctor. Nulla facilisi. Proin vel enim sed dolor malesuada rutrum sed ut metus. Integer vel auctor leo. Vivamus rhoncus tortor tempus, ornare diam at, maximus nulla. Nullam ut imperdiet risus. Donec molestie laoreet ex, sed vestibulum magna aliquet a."
            android:textSize="16sp" />


    </RelativeLayout>
</ScrollView>